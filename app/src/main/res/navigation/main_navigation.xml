<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/fruitListFragment">

    <fragment
        android:id="@+id/studentListFragment"
        android:name="com.zuzudev.advweek4.view.StudentListFragment"
        android:label="fragment_student_list"
        tools:layout="@layout/fragment_student_list" >
        <action
            android:id="@+id/actionStudentDetailFragment"
            app:destination="@id/studentDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/studentDetailFragment"
        android:name="com.zuzudev.advweek4.view.StudentDetailFragment"
        android:label="fragment_student_detail"
        tools:layout="@layout/fragment_student_detail" >
        <argument
            android:name="student_id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/fruitListFragment"
        android:name="com.zuzudev.advweek4.view.FruitListFragment"
        android:label="fragment_fruit_list"
        tools:layout="@layout/fragment_fruit_list" />
</navigation>